<div class="page-header">
  <h1><%= @language.name %> Courses</h1>
</div>
<div class="container">
  <div class="row">
    <% if user_signed_in? %>
    <%= link_to "Add Course", new_course_path, class: 'btn btn-primary pull-left' %>
    <%= link_to 'Create Curriculum', new_curriculum_path, class: 'btn btn-info pull-right'%>
    <% end %>
  </div>
  <!-- Navigation tab selection -->
  <div class="row">
    <ul class="nav nav-tabs">
      <li class="active"><a data-toggle="tab" href="#courses">Courses <span class="badge"><%= @courses.length %></a></li>
      <li><a data-toggle="tab" href="#curriculums">Curriculums <span class="badge"><%= @curriculums.length %></a></li>
    </ul>
  <!-- The Course Tab Contents -->
    <div class="tab-content">
      <div id="courses" class="tab-pane fade in active">
      <!-- Sort options and Filter Button-->
        <%= render partial: "shared/course_filters", locals: {language: @language} %>
        <!-- Course panel list -->
        <div class="row">
          <% if @courses.length > 0 %>
            <% @courses.each do |x| %>
              <div class="panel col-md-8 col-md-offset-2">
                <%= link_to x.name, x %>
              </div>
            <% end %>
          <% else %>
            <h3>No Courses Posted</h3>
          <% end %>
        </div>
      </div>
      <!-- Curriculums panel list -->
      <div id="curriculums" class="tab-pane fade">
        <% if @curriculums.length > 0 %>
          <% @curriculums.each do |x| %>
          <div class="panel col-md-8 col-md-offset-2">
            <h3><%= link_to x.title, x %></h3>
            <p><%= x.description %></p>
          </div>
          <% end %>
        <% else %>
          <h3>No Available Curriculums</h3>
        <% end %>
      </div>
    </div>
  </div>
</div>
