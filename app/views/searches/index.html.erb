<div class="page-header">
	<h1>Search Results for: <em><%= params[:keyword_search]%></em></h1>
</div>

<div class="container">
	<div class="row">
	  <ul class="nav nav-tabs">
	  	<% if @tab_courses %>
	    	<li class="active"><a data-toggle="tab" href="#courses">Courses <span class="badge"><%= @courses.count %></span></a></li>
	    <% else %>
	    	<li><a data-toggle="tab" href="#courses">Courses <span class="badge"><%= @courses.count %></span></a></li>
	    <% end %>
	    <% if @tab_curriculums %>
				<li class="active"><a data-toggle="tab" href="#curriculums">Curriculums <span class="badge"><%= @curriculums.count %></span></a></li>
	    <% else %>
	    	<li><a data-toggle="tab" href="#curriculums">Curriculums <span class="badge"><%= @curriculums.count %></span></a></li>
	    <% end %>
	    <% if @tab_languages %>
	    	<li class="active"><a data-toggle="tab" href="#languages">Languages <span class="badge"><%= @languages.count %></span></a></li>
	    <% else %>
	    	<li><a data-toggle="tab" href="#languages">Languages <span class="badge"><%= @languages.count %></span></a></li>
	    <% end %>
	  </ul>

	  <div class="tab-content">
	  	<!-- Course panel content -->
	  	<% if @tab_courses %>
	    	<div id="courses" class="tab-pane fade in active">
	    <% else %>
				<div id="courses" class="tab-pane fade">
			<% end %>
	    	<!-- Filters and Sort -->
	    	<%= render partial: 'shared/course_search_filters', locals: {language: @language} %>
	    	<!-- Courses -->
	      <% if @courses.count > 0 %>
	        <% @courses.each do |x| %>
	          <div class="panel col-md-8 col-md-offset-2">
	            <%= link_to x.name, x %>
	          </div>
	        <% end %>
	      <% else %>
	        <h3>No Matching Courses</h3>
	      <% end %>
	    </div>
	    <!-- Curriculum content -->
	    <% if @tab_curriculums %>
	    	<div id="curriculums" class="tab-pane fade in active">
	    <% else %>
	    	<div id="curriculums" class="tab-pane fade">
	    <% end %>
	    <%= render partial: 'shared/curriculum_search_filters', locals: {language: @language} %>
	      <% if @curriculums.count > 0 %>
	        <% @curriculums.each do |x| %>
	        <div class="panel col-md-8 col-md-offset-2">
	          <h3><%= link_to x.name, x %></h3>
	          <p><%= x.description %></p>
	        </div>
	        <% end %>
	      <% else %>
	        <h3>No Matching Curriculums</h3>
	      <% end %>
	    </div>
	    <!-- Language content -->
	    <% if @tab_languages %>
	    	<div id="languages" class="tab-pane fade in active">
	    <% else %>
				<div id="languages" class="tab-pane fade">
			<% end %>
	      <% if @languages.count > 0 %>
	        <% @languages.each do |x| %>
	          <div class="panel col-md-8 col-md-offset-2">
	            <%= link_to x.name, x %>
	          </div>
	        <% end %>
	      <% else %>
	        <h3>No Matching Languages</h3>
	      <% end %>
	    </div>
	  </div>
	</div>
</div>