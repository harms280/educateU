<div class="page-header">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1 class="text-center"><%= @course.name %> <br> <small><%= @course.description %></small></h1>
    </div>
  </div>
</div>
<div class="jumbotron">
  <div class="container">
    <%if @course.course_created? %>
      <p>Course created: <%= @course.course_created %></p>
    <% end %>
    <p>Cost: <%= @course.cost %></p>
    <p>Skill Level: <%= @course.skill_level %></p>
    <%= link_to "Take Course Here", @course.url %>
  </div>
</div>
<div class="container">
  <div class="row">
    <%= link_to "Review Course", new_course_review_path(@course), class: 'btn btn-success' %>
  </div>
  <div class="row">
    <% @course.reviews.each do |r| %>
      <div class="panel col-md-8 col-md-offset-2" >
        <h4><strong>Title:</strong> <%= r.title%> <small><%= time_ago_in_words(r.created_at) %></small></h4>
        <p><strong>Rating:</strong> <%= r.rating %></p>
        <p><strong>Review:</strong> <%= r.review_body%></p>
      </div>
    <% end %>
  </div>
</div>